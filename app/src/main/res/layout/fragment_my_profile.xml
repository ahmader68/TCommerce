<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_myProfileFragment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        app:errorEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_myProfileFragment_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_male"
            android:padding="16dp"
            android:inputType="text"
            android:ems="10"
            android:hint="@string/username"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_myProfileFragment_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_myProfileFragment_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:errorEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_myProfileFragment_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_email"
            android:hint="@string/email"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_myProfileFragment_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_myProfileFragment_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:errorEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_myProfileFragment_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_mobile_phone"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/mobile"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_myProfileFragment_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_myProfileFragment_mobile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/change"
        android:background="@color/Green"
        android:textColor="@color/White"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>