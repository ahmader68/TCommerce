<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_userCommentFragment_clientsCommentCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_userCommentFragment_filter"
        android:textSize="16sp"
        android:text="@string/clients_comments"
        android:padding="10dp"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_userCommentFragment_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txt_userCommentFragment_clientsCommentCount"
        app:layout_constraintBottom_toBottomOf="@id/txt_userCommentFragment_clientsCommentCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_userCommentFragment_clientsCommentCount"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_action_sort_1"
        android:text="@string/most_useful_comments"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_userCommentsFragment_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txt_userCommentFragment_clientsCommentCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtn_userCommentsFragment_addComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:backgroundTint="@color/Green"
        android:src="@drawable/ic_pen"
        />
</androidx.constraintlayout.widget.ConstraintLayout>